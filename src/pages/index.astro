---
import Layout from "../layouts/Layout.astro";

import { getCollection } from "astro:content";
import HeroSection from "../components/HeroSection.astro";
import Header from "../components/Header.astro";
import BlogPost from "../components/BlogPost.astro";

const today = new Date();

const posts = (await getCollection("posts")).sort((a: any, b: any) => {
  const dateA = a.data?.date ? new Date(a.data.date).getTime() : 0;
  const dateB = b.data?.date ? new Date(b.data.date).getTime() : 0;
  return dateB - dateA;
});
---

<Layout>
  <Header />
  <HeroSection />

  <main class="max-w-6xl mx-auto px-6 py-8">
    <div class="max-w-6xl mx-auto">
      <section class="mb-8">
        <div class="border-b border-border pb-4 mb-6 text-center">
          <h2 class="font-serif-display text-2xl font-bold text-foreground">
            Últimas notas
          </h2>
     
        </div>

        <div class="space-y-6">
          {
            posts.map((post, index) => (
              <BlogPost
                title={post.data.title}
                excerpt={post.data.excerpt}
                date={post.data.date}
                category={post.data.category}
                readTime={post.data.readTime}
                slug={post.slug}
                featured={post.data.featured}
              />
            ))
          }
        </div>
      </section>
    </div>
  </main>

  <footer class="border-t border-border bg-muted/30 mt-16">
    <div class="max-w-6xl mx-auto px-6 py-8 text-center">
      <p class="text-sm text-muted-foreground font-serif-body">
        © {today.getFullYear()} Matías Gelpi. Todas las notas marginales son mías.
      </p>
    </div>
  </footer>
</Layout>
