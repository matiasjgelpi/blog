---
import { getCollection } from "astro:content";
const [heroEntry] = await getCollection("hero");

const data = heroEntry?.data;

const { Content } = await heroEntry?.render();
---

---

<section
  class="relative bg-gradient-to-r from-background to-muted/30 border-b border-border"
>
  <div class="max-w-6xl mx-auto px-6 py-16">
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div class="space-y-6">
        <h1
          class="font-serif-display text-4xl lg:text-5xl font-bold text-foreground leading-tight"
        >
          {data.title}
        </h1>
        <div class="space-y-4 text-lg font-serif-body leading-relaxed">
          <Content />
        </div>
        <div class="pt-4">
          <div class="w-16 h-0.5 bg-primary"></div>
        </div>
      </div>

      <div class="relative">
        <div
          class="relative overflow-hidden rounded-sm border border-border shadow-lg"
        >
          <img
            src={data.image.src}
            alt="Imagen portada"
            class="w-full h-80 lg:h-96 object-cover transition-transform duration-300 hover:scale-105"
          />
          <div
            class="absolute inset-0 bg-gradient-to-t from-background/20 to-transparent"
          >
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
