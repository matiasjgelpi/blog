---

export interface Props {
  title: string;
  excerpt: string;
  date: Date;
  category: string;
  readTime: string;
  featured?: boolean;
  slug?: string;
}

const {
  title,
  excerpt,
  date,
  category,
  readTime,
  featured = false,
  slug,
} = Astro.props;
---

<article
  class={`border-b border-border pb-6 mb-6 ${featured ? "border-l-4 border-l-primary pl-6" : ""}`}
>
  <header class="mb-3">
    <div
      class="flex items-center gap-3 text-xs text-muted-foreground uppercase tracking-wide font-serif-body mb-2"
    >
      <span class="bg-muted px-2 py-1 rounded">{category}</span>
      <span>•</span>
      <time>{date}</time>
      <span>•</span>
      <span>{readTime}</span>
    </div>
    <h2
      class={`font-serif-display font-bold text-foreground leading-tight hover:text-primary transition-colors cursor-pointer ${featured ? "text-2xl" : "text-xl"}`}
    >
      {title}
    </h2>
  </header>

  <p class="text-muted-foreground leading-relaxed font-serif-body">
    {excerpt}
  </p>

  <footer class="mt-3">
    <a
      href={slug ? `/posts/${slug}` : "#"}
      class="text-sm text-primary hover:underline font-serif-body italic"
    >
      Leer más →
    </a>
  </footer>
</article>
